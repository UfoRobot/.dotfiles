Create Both
Expunge Both
SyncState *

IMAPAccount work-account
	Host @@MAIL_HOST@@
	User "@@MAIL_USER@@"
	PassCmd "/usr/bin/security find-internet-password -w -a @@MAIL_USER@@ -s @@MAIL_HOST@@ /Users/Si/Library/Keychains/login.keychain"
	SSLType IMAPS
	SSLVersions TLSv1.2

IMAPStore work-remote
	Account work-account

MaildirStore work-local
	Path /Users/Si/work/mail/REMOTE/
	Inbox /Users/Si/work/mail/REMOTE/Inbox
	Flatten .

Channel inbox
	Master :work-remote:
	Slave  :work-local:
	Patterns INBOX "Sent Items"

Channel other
	Master :work-remote:
	Slave  :work-local:
	Patterns *
	Patterns !Calendar !Contacts !Journal !Notes !Outbox
	Patterns !"RSS Feeds" !"Suggested Contacts" "!Sync Issues*" !Tasks
