# Stuff for all OSs --- add OS specific stuff in appropriate section below
#-------------------------------------------------------------------------------

alias rebash='source ~/.bashrc'

# Easier navigation
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias -- -="cd -"
alias +='pushd .'

# Shortcuts
alias vima='vim ~/.aliases'
alias vimb='vim ~/.bashrc'
alias xs='vim /work/xs-tips.md'

# Current projects
alias sm='cd /work/branches/trunk-storage/build.hg/myrepos/sm.hg'
alias r3='cd /work/branches/trunk-ring3/build.hg/'
alias xapi='cd /work/branches/trunk-ring3/build.hg/myrepos/xen-api'
alias defects='cd /work/defects/'
alias branches='cd /work/branches/'
alias snfs='cd /local/export/pr-1594/sm.hg'
alias vgpu='cd /work/branches/pr-1061/build.hg/myrepos/xen-api'
alias pp='cd /work/scratch/python-playground'
alias op='cd /work/scratch/ocaml-playground'

alias xenuse='/usr/groups/xenrt/xenrt-internal.hg/scripts/xenrtuse/xenrtuse'
alias xenrt='/usr/groups/xenrt/production/share/control/xenrt'

# rdesktop
# -x flags for rdesktop:
# 0x001: Disable desktop wallpaper
# 0x002: Disable full-window drag (only the window outline is displayed when the window is moved)
# 0x004: Disable menu animations
# 0x008: Disable user interface themes
# 0x020: Disable mouse cursor shadows
# 0x040: Disable cursor blinking
# 0x080: Enable font smoothing
# 0x100: Enable Desktop Composition
# to make most performant but still have font smoothing 0xef
alias rd='rdesktop -5 -K -k en-gb -g 1680x1031 -d citrite -u simonbe -a 32 -x 0xc0 -r clipboard:PRIMARYCLIPBOARD -r disk:~=$HOME -r disk:work=/work -p-'
alias rd_med='rd -g 1400x900'
alias rd_small='rd -g 1024x600'
alias xia='rd simonbe-xenia'

# Like to know what's just happened
alias cp='cp -v'
alias mv='mv -v'

# Listing files
alias ls='ls -hF'
alias ll='ls -lh'
alias l='ls -1'
alias la='ls -a'
alias lla='ll -aF'

# IP addresses
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# Useful...
alias g='grep -i'                               # case insensitive grep
alias ducks='du -cksh * | sort -rh | head -11'  # List size of pwd's contents
alias systail='tail -f /var/log/system.log'
alias sshx="ssh -X"
which colordiff >/dev/null && alias diff='colordiff'
alias less='less -R'

# more useful variants
which vimx >/dev/null && alias vim=vimx

# todo.txt
alias todo='todo -d ~/Dropbox/todo/config'
alias t='todo'
alias tb='t lf blocked.txt'
complete -F _todo t

# Moscow ML GNU readline hack
alias mosml='rlwrap mosml'

# Git stuff
which hub >/dev/null && alias git=hub
alias gitrevert='(git reset HEAD .);(git checkout -- .)'
alias gl='git log --graph --abbrev-commit --oneline --decorate'

# Mercurial
alias hl='hg log --template "* \x1B[0;33m{node|short}\x1B[0;30m———\x1B[0;31m\x1B[33m{date|shortdate}\x1B[30m———\x1B[33m{author|person}\n\x1B[0m{desc|strip|firstline|fill76|strip}\n\n" --color true | less -R'
alias hlx='hl | less -RX'

# Finding stuff
alias f='find . -iname'

# Wonder what I actually use...
alias profileme="history | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -n | tail -n 20 | sort -nr"

alias reopam="eval \`opam config env\`"

alias killch="pgrep chroot | xargs sudo kill"

# Mac OSX specific aliases
#-------------------------------------------------------------------------------
if [[ "$OSTYPE" =~ ^darwin ]]; then

if [[ $(brew list coreutils) ]]; then
    # GNU style ls
    alias ls="command ls -hF --color"
else
    # BSD style ls
    alias ls="command ls -hFG"
fi

# gVim for the win
alias gvim=mvim

# Wireless IP address
alias localip="ipconfig getifaddr en1"

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# Total terminal (quake stile terminal)
alias visor='/Applications/TotalTerminal.app/Contents/MacOS/applet 2> /dev/null'

# Quickly lock screen
alias lock='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'

alias top='top -o cpu'

fi


# Linux specific aliases
#-------------------------------------------------------------------------------
if [[ "$OSTYPE" =~ ^linux ]]; then

# open file with the default application for its type
alias open='xdg-open'

# show pstree to self
alias pidme='pstree -ps $$'

# GNU style ls
alias ls="command ls -hF --color=auto"

# Buildsystem shortcuts
alias clean='make distclean; make clean; make clean-repos'

# Old CentOS based VMs don't understand termcap screen-256color
alias vxs='TERM=screen vxs'
alias chroot='TERM=screen chroot'

fi
